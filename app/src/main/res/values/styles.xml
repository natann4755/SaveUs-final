<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomNavigation.ActiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="editText" parent="AppTheme">
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabBackground">@drawable/selector_tablayot_my_place</item>
        <item name="tabTextAppearance">@style/MyCustomTabText</item>

    </style>

    <style name="Base.Widget.Design.TabLayout2" parent="android:Widget">
        <item name="tabBackground">@drawable/selector_tab_layot_on_bording</item>


    </style>


    <style name="MyCustomTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GreenCheck">
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>


</resources>
