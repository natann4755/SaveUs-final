<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/grey_border_item_rv" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58.4dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="266"
            android:orientation="horizontal">

            <View
                android:layout_width="16dp"
                android:layout_height="match_parent" />

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/red_marker" />

            <TextView
                android:id="@+id/item_RV_adrees_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:text="יפו 127 ירושלים"
                android:textColor="@color/black"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="18sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="111"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/item_RV_endTime_TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13:45"
                        android:textColor="@color/blacgery_color_info_window"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/blacgery_color_info_window"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/item_RV_startTime_TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:45"
                        android:textColor="@color/blacgery_color_info_window"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/item_RV_time_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="00:03:13"
                    android:textColor="@color/black_item_rv"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="15dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.9dp"
        android:background="@color/grey_border_item_rv" />
</LinearLayout>